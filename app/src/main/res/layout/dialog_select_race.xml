<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="260dp"
    android:layout_height="260dp"
    android:background="#BF000000">

    <ImageView
        android:id="@+id/iv_fields"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/fields"/>

    <ImageView
        android:id="@+id/iv_rocks"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignTop="@id/iv_fields"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/rocks"/>

    <ImageView
        android:id="@+id/iv_forests"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/iv_fields"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="64dp"
        android:src="@drawable/forests"/>

    <ImageView
        android:id="@+id/iv_swamps"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignTop="@id/iv_rocks"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/swamps"/>

    <ImageView
        android:id="@+id/iv_dark"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignTop="@id/iv_rocks"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/dark"/>
</RelativeLayout>